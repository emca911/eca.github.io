   <title> Jaymes JS Variable Example</title>
      <script type="text/javascript"> 
         

      /*  declaration of variables and some variable assignment and writing to the web page*/
         var sen_fin;

         sen_fin = prompt("What language did Selena sing in?");
   

      /* this is the right answer*/
         if (sen_fin == "Spanish" ) {
            document.write("<body bgcolor='#FFA233'>");
            document.write ('<img src = "selenadancing.gif" width=498 height=371>');
         }

      /*this could also be a right answer*/ 
         else if (sen_fin == "spanish" ) {
            document.write("<body bgcolor='#EDB469'>");
            document.write('<img src = "selenadancing.gif" width=486 height= 394>');
         }
            
      /*this is for all other text inputs*/ 
         else {
            document.write("<body bgcolor='#C23D10'>");
            document.write("You're thinking of the wrong Selena!");
            }


</script> 

